<!-- HERO SECTION -->
<div class="hero" id="hero" style='background-image: url(<%= asset_path("fleureventbrite.jpeg") %>)'>
  <div class="overlay">
    <h1>Bienvenue sur Eventbrite-Clone</h1>
    <h3>Découvre et participe à des événements inoubliables !</h3>
    <button id="show-events-btn">🎟️ Voir et s'inscrire aux événements</button>
  </div>
</div>

<!-- SECTION DES ÉVÉNEMENTS - CACHÉE AU DÉBUT -->
<div id="events-section" style="display: none;">
  <h2>🔥 Événements à venir 🔥</h2>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4">
        <div class="card event-card">
          <div class="card-body">
            <h6 class="text-muted">Cliquez pour plus de détails</h6>
            <h4 class="card-title"><%= link_to event.title, event_path(event), class: "stretched-link" %></h4>
            <p><strong>Lieu :</strong> <%= event.location %></p>
            <p><strong>Date :</strong> <%= event.start_date.strftime("%d/%m/%Y à %Hh%M") %></p>
            <p><strong>Durée :</strong> <%= event.duration %> minutes</p>
            <p><strong>Prix :</strong> <%= event.price %> €</p>
            <p><%= truncate(event.description, length: 100) %></p>

            <% if user_signed_in? %>
              <% if event.participants.include?(current_user) %>
                <p class="text-success fw-bold">Tu es déjà inscrit à cet événement 🎉</p>
              <% else %>
                <%= button_to "Payer pour s'inscrire", checkout_event_path(event), method: :post, data: { turbo: false }, class: "btn btn-success" %>
              <% end %>
            <% else %>
              <%= link_to "Connectez-vous pour vous inscrire", new_user_session_path, class: "btn btn-primary" %>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- SCRIPT JAVASCRIPT POUR FAIRE FONCTIONNER LE BOUTON -->
<script>
  document.addEventListener("turbo:load", function () {
    const bouton = document.getElementById("show-events-btn");
    const eventsSection = document.getElementById("events-section");
    const heroSection = document.getElementById("hero");

    bouton.addEventListener("click", function () {
      eventsSection.style.display = "block"; // affiche les events
      heroSection.style.display = "none";    // cache la landing
    });
  });
</script>
