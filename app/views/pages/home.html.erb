<!-- HERO SECTION -->
<%= stylesheet_link_tag "home", media: "all", "data-turbo-track": "reload" %>

<div class="hero" id="hero">
  <div class="overlay">
    <h1>Bienvenue sur Eventbrite-Clone</h1>
    <h2>Découvre et participe à des événements inoubliables !</h2>
    <button id="show-events-btn">🎟️ Voir et s'inscrire aux événements</button>
  </div>
</div>

<!-- SECTION DES ÉVÉNEMENTS - CACHÉE AU DÉBUT -->
<div id="events-section" style="display: none;">
  <h2 class="titre-evenements">🔥 Événements à venir 🔥</h2>
   <div class="container">
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4 mb-4">
          <div class="card event-card">
            <div class="card-body">
              <h4 class="card-title"><%= link_to event.title, event_path(event), class: "stretched-link" %></h4>
              <p><strong>Lieu :</strong> <%= event.location %></p>
              <p><strong>Date :</strong> <%= event.start_date.strftime("%d/%m/%Y à %Hh%M") %></p>

              <% if user_signed_in? %>
                <% if event.participants.include?(current_user) %>
                  <p class="text-success fw-bold">Tu es déjà inscrit à cet événement 🎉</p>
                <% else %>
                  <%= button_to "Inscription et Paiement", checkout_event_path(event), method: :post, data: { turbo: false }, class: "btn btn-success" %>
                <% end %>
              <% else %>
                <%= link_to "Connectez-vous pour plus de détails", new_user_session_path, class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- SCRIPT JAVASCRIPT POUR FAIRE FONCTIONNER LE BOUTON -->
<script>
  document.addEventListener("turbo:load", function () {
    const bouton = document.getElementById("show-events-btn");
    const eventsSection = document.getElementById("events-section");
    const heroSection = document.getElementById("hero");

    function showEvents() {
      eventsSection.style.display = "block";
      heroSection.style.display = "none";
    }

    bouton.addEventListener("click", showEvents);

    // 👉 Si l'URL contient #events, on affiche directement la section
    if (window.location.hash === "#events") {
      showEvents();
    }
  });
</script>
