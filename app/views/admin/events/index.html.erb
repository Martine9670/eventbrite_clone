<%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>

<h2>🗂️ Tous les événements</h2>

<% if @events.any? %>
  <% @events.each do |event| %>
    <div class="admin-card">
      <h2><%= event.title %></h2>
      <p><strong>Date :</strong> <%= event.start_date.strftime("%d/%m/%Y à %Hh") %></p>
      <p><strong>Statut :</strong>
        <% if !event.reviewed %>
          🟡 En attente
        <% elsif event.validated %>
          ✅ Validé
        <% else %>
          ❌ Refusé
        <% end %>
      </p>

    <%= button_to '🗑 Supprimer', admin_event_path(event), 
        method: :delete, 
        data: { confirm: "Tu es sûr de vouloir supprimer cet événement ?" }, 
        class: "btn btn-danger" %>
    </div>
  <% end %>
<% else %>
  <p>Aucun événement trouvé...</p>
<% end %>
