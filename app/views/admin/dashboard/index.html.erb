<%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>

<div class="admin-dashboard">
  <h1>🎛️ Admin Dashboard</h1>
  <p>Bienvenue, <strong><%= current_user.email %></strong> 👋</p>

  <hr>

  <div class="admin-dashboard-columns">
    <!-- Colonne de gauche : Statistiques -->
    <div class="admin-column">
      <h2>📊 Statistiques rapides</h2>
      <ul class="admin-list">
        <li>👥 Utilisateurs : <strong><%= User.count %></strong></li>
        <li>👑 Admins : <strong><%= User.where(is_admin: true).count %></strong></li>
        <li>📅 Événements : <strong><%= Event.count %></strong></li>
        <li>🎟️ Participations : <strong><%= Attendance.count %></strong></li>
      </ul>
    </div>

    <!-- Colonne de droite : Liens rapides -->
    <div class="admin-column">
      <h2>🔗 Accès rapides</h2>
      <ul class="admin-list">
        <li><%= link_to "📋 Voir tous les événements", admin_events_path %></li>
        <li><%= link_to "✅ Événements acceptés", validated_admin_events_path %></li>
        <li><%= link_to "🟡 Événements à valider", pending_admin_events_path %></li>
        <li><%= link_to "🕰️ Événements passés", past_admin_events_path %></li>
        <li><%= link_to "👥 Gérer les utilisateurs", admin_users_path %></li>
        <li><%= link_to "🏠 Retour au site public", root_path %></li>
      </ul>
    </div>
  </div>
</div>
