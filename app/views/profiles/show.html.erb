<%= stylesheet_link_tag "theme_profile", media: "all", "data-turbo-track": "reload" %>

<h2>Mon profil</h2>
    <div class="container py-5">
        <p><strong>Prénom :</strong> <%= @user.first_name %></p>
    <p><strong>Nom :</strong> <%= @user.last_name %></p>
    <p><strong>Email :</strong> <%= @user.email %></p>
    <p><strong>Description :</strong> <%= @user.description %></p>

    <div class="mt-4">
      <%= link_to "Modifier mon profil", edit_profile_path, class: "btn btn-outline-primary me-2" %>
      <%= link_to "Supprimer mon compte", profile_path, method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: "btn btn-danger" %>
    </div>
</div>
