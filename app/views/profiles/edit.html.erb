<%= stylesheet_link_tag "theme_profile", media: "all", "data-turbo-track": "reload" %>

<h2>Modifier mon profil</h2>

<% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize_to_fill: [150, 150]), class: "rounded-circle mb-3" %>
<% else %>
  <%= image_tag "default-avatar.png", size: "150x150", class: "rounded-circle mb-3" %>
<% end %>


<%= form_with model: @user, url: profile_path, method: :patch, local: true, html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@user.errors.count, "erreur") %> :</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="profile-container">
    <div class="card shadow-sm p-4">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="card shadow-sm p-4">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="card shadow-sm p-4">
      <%= f.label :avatar, "Photo de profil", class: "form-label" %>
      <%= f.file_field :avatar, class: "form-control" %>
    </div>


    <div class="card shadow-sm p-4">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 3 %>
    </div>

    <div class="card shadow-sm p-4">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="card shadow-sm p-4">
      <%= f.label :password, "Mot de passe", class: "form-label" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="card shadow-sm p-4">
      <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>

    <%= f.submit "Mettre Ã  jour", class: "btn btn-primary" %>
  <% end %>
</div>
